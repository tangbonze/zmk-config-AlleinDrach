           keymap {
                 compatible = "zmk,keymap";
                 default_layer {
                    display-name = "Base";
                    bindings = <
                    // ╭────────────────────────┬────────────────────────┬────────────────────────┬────────────────────────┬────────────────────────┬────────────────────────┬────────────────────────┬────────────────────────┬────────────────────────┬────────────────────────┬────────────────────────┬────────────────────────╮
                                &kp GRAV                   &kp Q                   &kp W                   &kp E                    &kp R                   &kp T                   &kp Y                   &kp U                   &kp I                   &kp O                     &kp P                   &mod_lgui_bksp_del    
                    // ├────────────────────────┼────────────────────────┼────────────────────────┼────────────────────────┼────────────────────────┼────────────────────────┼────────────────────────┼────────────────────────┼────────────────────────┼────────────────────────┼────────────────────────┼────────────────────────┤
                              &ht CAPS TAB                 &kp A                   &kp S                   &kp D                    &kp F                   &kp G                   &kp H                   &kp J                   &kp K                   &kp L                     &kp  SEMI                     &kp ENTER
                    // ├────────────────────────┼────────────────────────┼────────────────────────┼────────────────────────┼────────────────────────┼────────────────────────┼────────────────────────┼────────────────────────┼────────────────────────┼────────────────────────┼────────────────────────┼────────────────────────┤
                                &kp LSHFT                  &kp Z                   &kp X                   &kp C                    &kp V                   &kp B                   &kp N                   &kp M                   &kp COMMA               &kp DOT                  &mod_lshft_uarr_pgup         &input_toggle
                    // ├────────────────────────┼────────────────────────┼────────────────────────┼────────────────────────┼────────────────────────┴────────────────────────┼────────────────────────┼────────────────────────┼────────────────────────┼────────────────────────┼────────────────────────┼────────────────────────┤
                            &mo CONTROL_LAYER       &kp LEFT_CONTROL            &kp LEFT_ALT            &kp LEFT_COMMAND                        &mkp LCLK                                         &kp SPACE                         &kp SLASH               &mod_lshft_larr_home     &mod_lshft_darr_pgdn     &mod_lshft_rarr_end
                    // ╰────────────────────────┴────────────────────────┴────────────────────────┴────────────────────────┴─────────────-────────────-────────────-─────────┴────────────────────────-────────────────────────┴────────────────────────┴────────────────────────┴────────────────────────┴────────────────────────╯
                    >;
                };
                number_layer {
                   display-name = "Number";
                   bindings = <
                   // ╭────────────────────────┬────────────────────────┬────────────────────────┬────────────────────────┬────────────────────────┬────────────────────────┬────────────────────────┬────────────────────────┬────────────────────────┬────────────────────────┬────────────────────────┬────────────────────────╮
                                &trans                  &kp N1                     &kp N2                  &kp N3                   &kp N4                 &kp N5                   &kp N6                  &kp N7                  &kp N8                  &kp N9                    &kp N0                  &mod_lgui_bksp_del
                   // ├────────────────────────┼────────────────────────┼────────────────────────┼────────────────────────┼────────────────────────┼────────────────────────┼────────────────────────┼────────────────────────┼────────────────────────┼────────────────────────┼────────────────────────┼────────────────────────┤
                                &trans                  &trans                     &trans                  &trans                   &trans                 &trans                   &trans                  &kp N4                  &kp N5                  &kp N6                    &trans                        &trans                 
                   // ├────────────────────────┼────────────────────────┼────────────────────────┼────────────────────────┼────────────────────────┼────────────────────────┼────────────────────────┼────────────────────────┼────────────────────────┼────────────────────────┼────────────────────────┼────────────────────────┤
                                &trans                  &trans                     &trans                  &trans                   &trans                 &trans                   &trans                  &kp N1                  &kp N2                  &kp N3                    &trans                    &input_toggle                
                   // ├────────────────────────┼────────────────────────┼────────────────────────┼────────────────────────┼────────────────────────┴────────────────────────┼────────────────────────┴────────────────────────┼────────────────────────┼────────────────────────┼────────────────────────┼────────────────────────┤
                                &trans                  &trans                     &trans                  &trans                               &trans                                          &kp SPACE                           &kp SLASH               &kp DOT                   &trans                        &trans
                   // ╰────────────────────────┴────────────────────────┴────────────────────────┴────────────────────────┴─────────────-────────────-────────────-─────────┴────────────────────────-────────────────────────┴────────────────────────┴────────────────────────┴────────────────────────┴────────────────────────╯
                   >;
               };
                control_layer {
                    display-name = "Control";
                    bindings = <
                    // ╭────────────────────────┬────────────────────────┬────────────────────────┬────────────────────────┬────────────────────────┬────────────────────────┬────────────────────────┬────────────────────────┬────────────────────────┬────────────────────────┬────────────────────────┬────────────────────────╮
                                &kp ESC                 &kp N1                      &kp N2                  &kp  N3                 &kp N4                  &kp N5                   &kp N6                 &kp N7                   &kp N8                  &kp N9                    &kp N0                &mod_lgui_bksp_del  
